#!/usr/bin/env node

/*
 * Set auryn parameters in dock config files (xml or plist)
 */


/**
 * Module dependencies.
 */

var _ = require('lodash');
var async = require('async');
var auryn = require('../package.json');
var cheerio = require('cheerio');
var fs = require('fs');
var program = require('commander');


program
  .version(auryn.version)
  .option('-m, --android-manifest [file]', 'Autoconfigure an Android manifest')
  .parse(process.argv);

var steps = {};
var manifestSteps = {};

manifestSteps.readConfFile = function (next) {
  fs.readFile(program.androidManifest, 'utf8', next);
};

manifestSteps.editXML = function (raw, next) {
  var $ = cheerio.load(raw);

  $('application').attr('android:name', 'AurynMainApplication');
  $('application > activity').attr('android:name', '.AurynMainActivity');

  fs.writeFile(program.androidManifest, $.xml());
};

if (program.androidManifest) {
  steps = manifestSteps;
}

async.waterfall(_.values(steps), function (err) {
  if (err) {
    console.error(err);
    process.exit(1);
  }
});